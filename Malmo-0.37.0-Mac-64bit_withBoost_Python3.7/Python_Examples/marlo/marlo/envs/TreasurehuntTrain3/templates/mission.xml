	<AgentSection mode="Survival">
		<Name>Agent1</Name>
		<AgentStart>
			
                        
			<Placement pitch="30" x="3.5" y="14" yaw="90" z="8.5"/>
			
                        
			<Inventory/>
			
                  
		</AgentStart>
		<AgentHandlers>
			<TurnBasedCommands requestedPosition="1">
				
                  
				<DiscreteMovementCommands>
					
                        
					<ModifierList type="deny-list">
						
                            
						<command>attack</command>
						
                        
					</ModifierList>
					
                      
				</DiscreteMovementCommands>
				
                  
			</TurnBasedCommands>
			<RewardForMissionEnd rewardForDeath="-1" rewardForDeathDistribution="Agent1:1 Agent2:1">
				 
                                
				<Reward description="Agent1_died" reward="-1"/>
				
                            
			</RewardForMissionEnd>
			<RewardForSendingCommand reward="-0.02"/>
			<RewardForTouchingBlockType>
				
                                
				<Block behaviour="onceOnly" distribution="Agent1:1 Agent2:1" reward="0.5" type="bone_block"/>
				
                            
			</RewardForTouchingBlockType>
			
                            
			<RewardForCollectingItem>
				
                                
				<Item distribution="Agent1:1 Agent2:1" reward="0.25" type="emerald"/>
				
                            
			</RewardForCollectingItem>
			
                            
